@model StudentManagementWithLogin.Models.Student

@{
    ViewData["Title"] = "Edit Student";
}

@* <h1 class="text-center mb-4">Edit Student Details</h1> *@

<div class="card mx-auto" style="max-width: 600px; padding: 30px; background-color: #ffffff; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <h4 class="mb-4 text-primary">Edit Student Profile</h4>
    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

        <!-- Hidden ID Field -->
        <div class="form-group">
            <input asp-for="Id" class="form-control" style="display: none;" />
        </div>

        <!-- First Name -->
        <div class="form-group mb-3">
            <label asp-for="FirstName" class="control-label">First Name</label>
            <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <!-- Last Name -->
        <div class="form-group mb-3">
            <label asp-for="LastName" class="control-label">Last Name</label>
            <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <!-- Email -->
        <div class="form-group mb-3">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Mobile -->
        <div class="form-group mb-3">
            <label asp-for="Mobile" class="control-label">Mobile</label>
            <input asp-for="Mobile" class="form-control" placeholder="Enter Mobile Number" />
            <span asp-validation-for="Mobile" class="text-danger"></span>
        </div>

        <!-- Address -->
        <div class="form-group mb-3">
            <label asp-for="Address" class="control-label">Address</label>
            <input asp-for="Address" class="form-control" placeholder="Enter Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary w-100">Save Changes</button>
        </div>

        <!-- Back to List Button -->
        <div class="form-group mt-3">
            <a class="btn btn-secondary w-100" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
