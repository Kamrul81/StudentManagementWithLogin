@model StudentManagementWithLogin.Models.User

@{
    var errorMessage = TempData["ErrorMessage"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom Styles */
        .login-container {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #008080;
        }

        .login-card {
            max-width: 400px;
            width: 100%;
            padding: 30px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .login-card h2 {
                font-size: 1.8rem;
                margin-bottom: 20px;
                text-align: center;
                font-weight: bold;
            }

        .alert {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 25px;
            padding-left: 20px;
        }

        .btn-primary {
            width: 100%;
            border-radius: 25px;
            padding: 12px;
        }

        .footer-text {
            text-align: center;
            margin-top: 20px;
        }

            /* Set the text of 'Don't have an account?' to black */
            .footer-text small {
                color: black; /* Set 'Don't have an account?' text to black */
            }

            /* Set the link color inside the footer to black */
            .footer-text a {
                color: black !important; /* Set the link color to black */
            }

                /* Optional: Change color on hover */
                .footer-text a:hover {
                    color: #007bff; /* Optional: Add hover effect */
                }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="login-card">
            <h2>Login</h2>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @errorMessage
                </div>
            }

            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label asp-for="UserName" class="form-label">Username</label>
                    <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 mb-4">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>

                <div class="footer-text">
                    <small>Don't have an account? </small><a href="@Url.Action("Register", "Account")">Sign up</a>
                </div>

            </form>
        </div>
    </div>

    <!-- Correct order: Popper.js, then Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

</body>
</html>
